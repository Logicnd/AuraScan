    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/home.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Home Screen"
    },
    {
      "src": "/screenshots/scan.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Ethics Scanner"
    },
    {
      "src": "/screenshots/ar.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "AR Ethics Lens"
    }
  ],
  "shortcuts": [
    {
      "name": "Quick Scan",
      "short_name": "Scan",
      "description": "Start a new ethics scan",
      "url": "/?action=scan",
      "icons": [{ "src": "/icons/scan-shortcut.png", "sizes": "96x96" }]
    },
    {
      "name": "AR Lens",
      "short_name": "AR",
      "description": "Open AR Ethics Lens",
      "url": "/ar",
      "icons": [{ "src": "/icons/ar-shortcut.png", "sizes": "96x96" }]
    },
    {
      "name": "Templates",
      "short_name": "Templates",
      "description": "Browse ethical templates",
      "url": "/templates",
      "icons": [{ "src": "/icons/template-shortcut.png", "sizes": "96x96" }]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+aurascan",
      "url": "/protocol?url=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/analyze",
      "accept": {
        "text/plain": [".txt"],
        "application/json": [".json"]
      }
    }
  ],
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "edge_side_panel": {
    "preferred_width": 400
  }
}
